<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-light bg-light">
          <a class="navbar-brand-blue" href="/">
            Blog on Rails
          </a>
            <div class="space">
            <%= link_to 'New Post', '/posts/new' %>
            <% if user_signed_in? %>
                Hello <%= link_to current_user.full_name, edit_user_path(current_user) %>,
            <%= link_to "Logout", sessions_path, method: :delete,
                  data: {confirm: "are you sure you want to log out?"}%>
            <% else %>
                <%= link_to "Login", new_sessions_path %> |
                <%= link_to "Sign Up", new_user_path %>
            <% end %>
        </div>
      </nav>
    </header>  
  
        <p></p>
         <% flash.each do |type, message| %>
        <div class="flash-message alert alert-<%= type %>">
          <%= message %>
        </div>
    <% end %>
    <%= yield %>
  </body>
</html>
